{
	"name": "people-manager",
	"version": "0.0.2",
	"description": "A powerful CRM plugin for managing contacts, tracking follow-ups, and building meaningful relationships in Obsidian.",
	"type": "module",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"typecheck": "tsc -noEmit -skipLibCheck",
		"test": "vitest run",
		"test:watch": "vitest",
		"clean": "rm -f main.js",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --check .",
		"format:fix": "prettier --write .",
		"check": "pnpm run lint && pnpm run format",
		"check:fix": "pnpm run lint:fix && pnpm run format:fix"
	},
	"keywords": [
		"obsidian",
		"plugin",
		"crm",
		"contacts",
		"people",
		"relationships",
		"follow-ups",
		"notifications",
		"network",
		"mlm",
		"business"
	],
	"funding": {
		"type": "github",
		"url": "https://github.com/sponsors/Real1tyy"
	},
	"author": "Real1tyy",
	"license": "MIT",
	"packageManager": "pnpm@9.0.0",
	"devDependencies": {
		"@eslint/js": "^9.18.0",
		"@types/luxon": "^3.7.1",
		"@types/node": "^24.10.1",
		"builtin-modules": "5.0.0",
		"esbuild": "0.25.11",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-obsidianmd": "^0.1.9",
		"globals": "^15.14.0",
		"jsdom": "^27.2.0",
		"obsidian": "1.8.7",
		"prettier": "^3.4.2",
		"tslib": "2.8.1",
		"typescript": "5.9.3",
		"typescript-eslint": "^8.18.2",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@real1ty-obsidian-plugins": "file:./shared",
		"chart.js": "^4.5.1",
		"colord": "^2.9.3",
		"luxon": "^3.7.2",
		"nanoid": "^5.1.6",
		"rxjs": "^7.8.2",
		"yaml": "^2.8.2",
		"zod": "^4.1.12"
	}
}
