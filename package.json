{
	"name": "people-manager",
	"version": "0.1.0",
	"description": "A powerful CRM plugin for managing contacts, tracking follow-ups, and building meaningful relationships in Obsidian.",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "pnpm -C shared build && tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"typecheck": "tsc -noEmit -skipLibCheck",
		"test": "vitest run",
		"test:watch": "vitest",
		"clean": "rm -f main.js"
	},
	"keywords": [
		"obsidian",
		"plugin",
		"crm",
		"contacts",
		"people",
		"relationships",
		"follow-ups",
		"notifications",
		"network",
		"mlm",
		"business"
	],
	"funding": {
		"type": "github",
		"url": "https://github.com/sponsors/Real1tyy"
	},
	"author": "Real1tyy",
	"license": "MIT",
	"packageManager": "pnpm@9.0.0",
	"devDependencies": {
		"@types/luxon": "^3.7.1",
		"@types/node": "^24.10.1",
		"builtin-modules": "5.0.0",
		"esbuild": "0.25.11",
		"jsdom": "^27.2.0",
		"obsidian": "1.8.7",
		"tslib": "2.8.1",
		"typescript": "5.9.3",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@real1ty-obsidian-plugins": "file:./shared",
		"chart.js": "^4.5.1",
		"luxon": "^3.7.2",
		"nanoid": "^5.1.6",
		"rxjs": "^7.8.2",
		"zod": "^4.1.12"
	}
}
